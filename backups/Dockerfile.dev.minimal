# Minimal Development Dockerfile
# This version uses minimal dependencies to avoid package manager issues

FROM golang:1.23-alpine

# Only install absolutely essential packages
RUN apk add --no-cache ca-certificates

# Set working directory
WORKDIR /app

# Copy go modules files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Create log directory
RUN mkdir -p /app/logs

# Expose port
EXPOSE 8080

# Set environment for development
ENV GO_ENV=development
ENV PORT=8080
ENV GIN_MODE=debug

# No health check to avoid external dependencies
# HEALTHCHECK disabled for minimal version

# Default command
CMD ["go", "run", "main.go"]