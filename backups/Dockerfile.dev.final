# Final Development Dockerfile
# This version skips build during image creation

FROM golang:1.24-alpine

# Set working directory
WORKDIR /app

# Copy source code
COPY . .

# Create log directory
RUN mkdir -p /app/logs

# Expose port
EXPOSE 8080

# Set environment for development
ENV GO_ENV=development
ENV PORT=8080
ENV GIN_MODE=debug

# No build during image creation - dependencies will be downloaded at runtime
# Default command
CMD ["go", "run", "main.go"]